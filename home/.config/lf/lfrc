### General ###
set shell zsh
set shellopts '-eu:--shwordsplit'
set ifs "\n"
set scrolloff 10
set icons
set incsearch
set findlen 0
set previewer ~/.config/lf/preview.sh
set hiddenfiles ".DS_Store:.git:.gitignore:~/[.ADLMP]*:!~/.config"

### Mappings ###
map <c-g> $lf -remote "send $id cd '$(~/.config/lf/cd-fzf.sh)'"
map <c-f> $(~/.config/lf/vim-fzf.sh)
map <enter> shell
map <esc> quit
map H push <f-1>
map x $$f
map X !$f
map D :delete
map L $lazygit
map B $hub browse
